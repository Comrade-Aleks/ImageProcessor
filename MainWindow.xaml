<Window x:Class="ImageProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="500" Width="300" Background="#FF4D4D4D">
    <Grid Margin="10">
        <!-- Language selection -->
        <Grid VerticalAlignment="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <!-- From Language -->
            <TextBlock Text="From:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0" />
            <ComboBox x:Name="FromLanguageComboBox" Grid.Column="1" Width="200" Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="English" Tag="eng" />
                <ComboBoxItem Content="Japanese" Tag="jpn" />
                <ComboBoxItem Content="Spanish" Tag="spa" />
            </ComboBox>

            <!-- To Language -->
            <TextBlock Grid.Row="1" Text="To:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0" />
            <ComboBox x:Name="ToLanguageComboBox" Grid.Row="1" Grid.Column="1" Width="200" Height="30">
                <ComboBoxItem Content="English" Tag="eng" />
                <ComboBoxItem Content="Japanese" Tag="jpn" />
                <ComboBoxItem Content="Spanish" Tag="spa" />
            </ComboBox>
        </Grid>

        <!-- Preprocessing Controls -->
        <StackPanel VerticalAlignment="Top" Margin="0,80,0,0">
            <TextBlock Text="Resize Factor" Foreground="White" />
            <Slider x:Name="ResizeFactorSlider" Minimum="1" Maximum="4" Value="2" TickFrequency="0.1"
                    Width="200" ValueChanged="PreprocessingSettingsChanged"/>

            <TextBlock Text="Threshold" Foreground="White" />
            <Slider x:Name="ThresholdSlider" Minimum="0" Maximum="1" Value="0.5" TickFrequency="0.1"
                    Width="200" ValueChanged="PreprocessingSettingsChanged"/>
        </StackPanel>

        <!-- Process Button -->
        <Button x:Name="ProcessButton" Content="Select Region" Width="150" Height="30"
                HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,160,0,0"
                Click="ProcessButton_Click"/>

        <!-- Output Box -->
        <TextBox x:Name="OutputTextBox" Background="#FFD3D3D3" Margin="0,210,0,0" 
                 HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" 
                 IsReadOnly="True"/>
    </Grid>
</Window>
