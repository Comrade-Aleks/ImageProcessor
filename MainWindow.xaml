<Window x:Class="ImageProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        Title="MainWindow" Height="550" Width="500" Background="#FF4D4D4D">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <!-- "Main" section -->
            <RowDefinition Height="Auto" />
            <!-- "Settings" section -->
            <RowDefinition Height="Auto" />
            <!-- Extra row to hold output text if you prefer -->
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!-- ======================= MAIN SECTION ======================= -->
        <StackPanel Grid.Row="0" Orientation="Vertical">
            <!-- Title -->
            <TextBlock Text="Main" Foreground="White" FontWeight="Bold" FontSize="16" />

            <!-- From / To Language -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="From:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0" />
                <ComboBox x:Name="FromLanguageComboBox" Width="120" Height="25" />
                <TextBlock Text="To:" VerticalAlignment="Center" Foreground="White" Margin="20,0,10,0" />
                <ComboBox x:Name="ToLanguageComboBox" Width="120" Height="25" />
            </StackPanel>

            <!-- Upload / Capture -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <Border x:Name="FileUploadBorder" BorderBrush="White" BorderThickness="2" CornerRadius="5"
                        Width="150" Height="50" AllowDrop="True"
                        Drop="FileUploadBorder_Drop"
                        MouseLeftButtonDown="FileUploadBorder_Click">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="Drag/Drop or Click" Foreground="White" HorizontalAlignment="Center" />
                    </StackPanel>
                </Border>

                <Button x:Name="AutoCaptureButton" Content="Auto Capture" Width="120" Height="30"
                        Margin="20,0,0,0"
                        Click="AutoCaptureButton_Click" />
            </StackPanel>

            <!-- Process / Translate -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <Button x:Name="ProcessButton" Content="Read selected region" Width="150" Height="30"
                        Click="ProcessButton_Click" />
                <Button x:Name="TranslateButton" Content="Translate" Width="100" Height="30" Margin="20,0,0,0"
                        Click="TranslateButton_Click" />
            </StackPanel>
        </StackPanel>

        <!-- ====================== SETTINGS SECTION ===================== -->
        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,10,0,0">
            <!-- Title -->
            <TextBlock Text="Settings" Foreground="White" FontWeight="Bold" FontSize="16" />

            <!-- Resize Factor -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Resize Factor" Foreground="White" Width="100" VerticalAlignment="Center" />
                <xctk:DoubleUpDown x:Name="ResizeFactorSlider"
                                   Minimum="1"
                                   Maximum="4"
                                   Value="2"
                                   Increment="0.5"
                                   Width="60"
                                   ValueChanged="PreprocessingSettingsChanged" />
            </StackPanel>

            <!-- Threshold-->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Threshold" Foreground="White" Width="100" VerticalAlignment="Center" />
                <xctk:DoubleUpDown x:Name="ThresholdSlider"
                                   Minimum="0"
                                   Maximum="1"
                                   Value="0.5"
                                   Increment="0.1"
                                   Width="60"
                                   ValueChanged="PreprocessingSettingsChanged" />
            </StackPanel>

            <!-- Auto Orientation -->
            <CheckBox x:Name="AutoOrientationCheckBox" Content="Auto Orientation" Foreground="White" Margin="0,5,0,5" />

            <!-- Manual Orientation -->
            <StackPanel Orientation="Horizontal" Margin="0,5,0,5">
                <TextBlock Text="Manual Orientation" Foreground="White" Width="100" VerticalAlignment="Center" />
                <xctk:DoubleUpDown x:Name="ManualOrientationSlider"
                                   Minimum="0"
                                   Maximum="360"
                                   Value="0"
                                   Increment="1"
                                   Width="60"
                                   ValueChanged="PreprocessingSettingsChanged" />
            </StackPanel>
        </StackPanel>

        <!-- ====================== OUTPUT TEXTBOX ====================== -->
        <TextBox x:Name="OutputTextBox"
                 Grid.Row="2"
                 Background="#FFD3D3D3"
                 Margin="0,10,0,0"
                 TextWrapping="Wrap"
                 AcceptsReturn="True"
                 VerticalScrollBarVisibility="Auto"
                 IsReadOnly="True" />
    </Grid>
</Window>
