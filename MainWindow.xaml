<Window x:Class="ImageProcessor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="450" Width="800" Background="#FF4D4D4D">
    <Grid Margin="10">
        <!-- Language selection area -->
        <Grid VerticalAlignment="Top" Margin="0,20,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <!-- From Language -->
            <TextBlock Text="From:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0" />
            <ComboBox x:Name="FromLanguageComboBox" Grid.Column="1" Width="200" Height="30" Margin="0,0,0,10" VerticalAlignment="Top">
                <ComboBoxItem Content="English" Tag="eng" />
                <ComboBoxItem Content="Japanese" Tag="jpn" />
                <ComboBoxItem Content="Spanish" Tag="spa" />
                <!-- Add more languages as needed -->
            </ComboBox>

            <!-- To Language -->
            <TextBlock Grid.Row="1" Text="To:" VerticalAlignment="Center" Foreground="White" Margin="0,0,10,0" />
            <ComboBox x:Name="ToLanguageComboBox" Grid.Row="1" Grid.Column="1" Width="200" Height="30" VerticalAlignment="Top">
                <ComboBoxItem Content="English" Tag="en" />
                <ComboBoxItem Content="Japanese" Tag="jpn" />
                <ComboBoxItem Content="Spanish" Tag="spa" />
                <!-- Add more languages as needed -->
            </ComboBox>
        </Grid>

        <!-- Button for Select Region, will change functionality later, for now just translates. -->
        <Button x:Name="ProcessButton" Content="Select Region" Width="100" Height="30" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,150,0,0" Click="ProcessButton_Click" />

        <!-- TextBox for displaying text -->
        <TextBox x:Name="OutputTextBox" Background="#FFD3D3D3" Margin="0,200,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                 TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" IsReadOnly="True" />
    </Grid>
</Window>
